# Environment Configuration Example
# Copy this file to .env.local, .env.development, .env.staging, .env.production

# Environment
NODE_ENV=local

# Server Configuration
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/poptrack

# CORS Configuration
# For local development
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# For staging (uncomment and modify as needed)
# FRONTEND_URL=https://staging.yourdomain.com
# ADMIN_URL=https://staging-admin.yourdomain.com

# For production (uncomment and modify as needed)
# FRONTEND_URL=https://yourdomain.com
# ADMIN_URL=https://admin.yourdomain.com

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Logging
LOG_LEVEL=debug 